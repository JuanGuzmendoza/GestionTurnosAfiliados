@model string

@{
    ViewData["Title"] = "Bienvenido";
}

<!-- MOSTRAR MENSAJE DE BIENVENIDA Y CORREO -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="card-title text-center">Bienvenido a través de Google</h2>
                </div>
                <div class="card-body">
                    <p class="card-text">Has iniciado sesión correctamente.</p>
                    @if (!string.IsNullOrEmpty(Model))
                    {
                        <p class="card-text">Tu correo electrónico es: <strong>@Model</strong></p>
                    }
                    <div class="d-flex justify-content-end">
                        <a href="@Url.Action("Logout", "Home")" class="btn btn-danger">Cerrar sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
